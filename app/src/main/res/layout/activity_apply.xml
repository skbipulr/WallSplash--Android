<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".ApplyActivity">
    <ImageView
        android:id="@+id/ivWallpaper"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:scaleType="centerCrop"
        android:layout_alignParentTop="true"
        android:adjustViewBounds="true"/>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/m50dp"
    android:gravity="center"
    android:layout_alignParentBottom="true"
    android:layout_gravity="bottom">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">
        <CheckBox
            android:id="@+id/cv_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/bg_checkbox_apply"
            android:layout_marginLeft="@dimen/m5dp"
            android:text="@null"
            android:layout_gravity="left" />
    <Button
        android:id="@+id/btnAplay"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_marginLeft="@dimen/m20dp"
        android:layout_marginRight="@dimen/m20dp"
        android:paddingLeft="@dimen/m30dp"
        android:paddingRight="@dimen/m30dp"
        android:gravity="center"
        android:textSize="@dimen/primaryText"
        android:textColor="@color/colorBlack"
        android:background="@drawable/bg_btn_apply"
        android:text="apply"/>


    <ImageView
        android:id="@+id/cv_download"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|end"
        android:layout_marginRight="@dimen/m5dp"
        android:src="@drawable/ic_download_icon_with_border" />
    </LinearLayout>
</RelativeLayout>
</RelativeLayout>